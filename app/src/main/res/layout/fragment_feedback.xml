<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".MainActivity">
        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="0dp"
        android:id="@+id/feedbackframe3"
        android:layout_below="@+id/feedbackframe4"
        >

        <TextView
            android:id="@+id/feedbacktextView5"
            android:layout_width="251dp"
            android:layout_height="20dp"
            android:text="Can we get back to you?"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="0dp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/feedbackcontainer"
        >

        <TextView
            android:id="@+id/feedbackHeader"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginTop="7dp"
            android:fontFamily="sans-serif"
            android:layout_centerVertical="true"
            android:text="Dzidzi"
            android:textSize="27sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@id/feedbackcontainer"
        android:id="@+id/feedbackframe"
        android:layout_marginTop="20dp"
        >

        <FrameLayout
            android:layout_width="322dp"
            android:layout_height="53dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/feedbacktextdislay"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Feedback"
                android:textSize="36sp"/>
        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/feedbackframe"
        android:layout_marginTop="20dp"
        android:id="@+id/feedbackframe1"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/feedbacktextView"
            android:layout_width="251dp"
            android:layout_height="20dp"
            android:text="What do you think about out recipes?"
            android:textSize="14sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="195dp"
        android:layout_below="@id/feedbackframe1"
        android:layout_marginTop="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/feedbackframe2"
        >

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/radioGroupId">

            <RadioButton
                android:id="@+id/feedbackbutton1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Not at all satisfied" />

            <RadioButton
                android:id="@+id/feedbackradioButton2"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:text="Somewhat unsatisfied" />


            <RadioButton
                android:id="@+id/feedbackradioButton3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="3dp"
                android:text="Neutral" />


            <RadioButton
                android:id="@+id/feedbackradioButton4"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginTop="3dp"
                android:text="Somewhat satisfied" />



            <RadioButton
                android:id="@+id/feedbackradioButton5"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="Completely satisfied"
                android:layout_marginTop="3dp" />



        </RadioGroup>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="67dp"
        android:layout_below="@+id/feedbackframe2"
        android:layout_marginTop="20dp"
        android:paddingTop="5dp"
        android:paddingBottom="0dp"
        android:id="@+id/feedbackframe4"
        >

        <TextView
            android:id="@+id/textView4"
            android:layout_width="251dp"
            android:layout_height="20dp"
            android:text="Do you have other inputs for us?"
            android:textSize="14sp" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="0dp" />


    </RelativeLayout>


    <Button
        android:id="@+id/feedbackbutton"
        android:layout_width="270dp"
        android:layout_height="48dp"
        android:layout_below="@id/feedbackframe3"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"
        android:backgroundTint="#2C192F"
        android:text="Submit" />



</RelativeLayout>
