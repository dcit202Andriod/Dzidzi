<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/frame_layoutParent"
    tools:context=".HomeFragment">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dzidzi"
            android:textSize="24sp"
            android:id="@+id/food_logo"
            android:fontFamily="sans-serif"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_logo"
            android:id="@+id/food_slogan"
            android:textSize="36sp"
            android:fontFamily="sans-serif"
            android:text="Get Cooking Today"/>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/food_slogan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/categoryRecView"/>


    </RelativeLayout>

</FrameLayout>